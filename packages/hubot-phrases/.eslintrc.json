{
    "extends": [
      "standard",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "rules": {
      "semi": [ "error", "always" ]
    },
    "env": {
      "node": true,
      "es6": true
    },
    "plugins": [
        "standard",
        "promise"
    ]
}
